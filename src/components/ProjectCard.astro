---
interface Props {
  title: string;
  category: string;
  description: string;
  thumbnail: string;
  tags: string[];
  githubUrl?: string;
  externalUrl?: string;
  slug: string;
}

const { title, category, description, thumbnail, tags, githubUrl, externalUrl, slug } = Astro.props;
---

<article class="group relative bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
  <!-- Thumbnail -->
  <div class="relative h-64 overflow-hidden bg-gradient-to-br from-primary-100 to-accent-100">
    <img 
      src={thumbnail} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
    />
    <!-- Category Badge -->
    <div class="absolute top-4 left-4">
      <span class="px-3 py-1 bg-primary-600 text-white text-sm font-medium rounded-full">
        {category}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="font-heading text-xl font-bold text-gray-900 mb-3 line-clamp-2">
      {title}
    </h3>
    
    <p class="text-gray-600 mb-4 line-clamp-3">
      {description}
    </p>

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.slice(0, 4).map(tag => (
        <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
          {tag}
        </span>
      ))}
    </div>

    <!-- Links -->
    <div class="flex gap-3 pt-4 border-t border-gray-200">
      {githubUrl && (
        <a 
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-lg hover:bg-gray-800 transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
          </svg>
          GitHub
        </a>
      )}
      {externalUrl && (
        <a 
          href={externalUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          View Project
        </a>
      )}
    </div>
  </div>
</article>
