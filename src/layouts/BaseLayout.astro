---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Aditya Kumar | Senior Software Engineer',
  description = 'Senior Software Engineer at Microsoft working on GitHub Codespaces. Passionate about building scalable cloud solutions.',
  image = '/og-image.jpg',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Sora:wght@600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body>
    <nav class="fixed top-0 left-0 right-0 bg-white/90 backdrop-blur-md z-50 border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="font-heading font-bold text-xl text-primary-700">
            Aditya Kumar
          </a>
          
          <div class="hidden md:flex space-x-8">
            <a href="/#about" class="text-gray-700 hover:text-primary-600 transition-colors">About</a>
            <a href="/#experience" class="text-gray-700 hover:text-primary-600 transition-colors">Experience</a>
            <a href="/#projects" class="text-gray-700 hover:text-primary-600 transition-colors">Projects</a>
            <a href="/blog" class="text-gray-700 hover:text-primary-600 transition-colors">Blog</a>
            <a href="/#contact" class="text-gray-700 hover:text-primary-600 transition-colors">Contact</a>
          </div>
          
          <a 
            href="/Aditya_Kumar_Senior_Software_Engineer_Resume.pdf" 
            download
            class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors text-sm font-medium"
          >
            Resume
          </a>
        </div>
      </div>
    </nav>
    
    <main class="pt-16">
      <slot />
    </main>
    
    <footer class="bg-gray-900 text-white py-12 mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="font-heading font-bold text-xl mb-4">Aditya Kumar</h3>
            <p class="text-gray-400">
              Senior Software Engineer passionate about building scalable cloud solutions.
            </p>
          </div>
          
          <div>
            <h4 class="font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="/#about" class="text-gray-400 hover:text-white transition-colors">About</a></li>
              <li><a href="/#experience" class="text-gray-400 hover:text-white transition-colors">Experience</a></li>
              <li><a href="/#projects" class="text-gray-400 hover:text-white transition-colors">Projects</a></li>
              <li><a href="/blog" class="text-gray-400 hover:text-white transition-colors">Blog</a></li>
            </ul>
          </div>
          
          <div>
            <h4 class="font-semibold mb-4">Connect</h4>
            <ul class="space-y-2">
              <li><a href="https://github.com/aditya30394" target="_blank" class="text-gray-400 hover:text-white transition-colors">GitHub</a></li>
              <li><a href="https://www.linkedin.com/in/aditya30394/" target="_blank" class="text-gray-400 hover:text-white transition-colors">LinkedIn</a></li>
              <li><a href="mailto:aditya30394@gmail.com" class="text-gray-400 hover:text-white transition-colors">Email</a></li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400 text-sm">
          <p>&copy; {new Date().getFullYear()} Aditya Kumar. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
